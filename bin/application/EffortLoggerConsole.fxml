<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" prefHeight="496.0" prefWidth="714.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.EffortLoggerConsoleController">
   <center>
      <VBox alignment="CENTER" prefHeight="287.0" prefWidth="699.0" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="1. When you start a new activity, press the &quot;Start an Activity&quot; button." />
            <Button mnemonicParsing="false" onAction="#startActivity" prefHeight="25.0" prefWidth="150.0" text="Start an Activity" />
            <Label text="2. Select the project, life cycle step, effort category, and deliverable from the following lists:" />
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="Project:" HBox.hgrow="NEVER" />
                  <ComboBox prefHeight="25.0" prefWidth="180.0" />
                  <Label text="Life Cycle Step:" />
                  <ComboBox prefHeight="25.0" prefWidth="180.0" />
               </children>
               <padding>
                  <Insets left="15.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="Effort Category:" />
                  <ComboBox prefHeight="25.0" prefWidth="200.0" />
                  <ComboBox prefHeight="25.0" prefWidth="275.0" />
               </children>
               <padding>
                  <Insets left="15.0" />
               </padding>
            </HBox>
            <Label text="3. Press the &quot;Stop this Activity&quot; button to generate an effort log entry using the attributes above." />
            <Button mnemonicParsing="false" onAction="#stopActivity" prefHeight="25.0" prefWidth="150.0" text="Stop this Activity" />
            <Label text="4. Unless you are done for the day, it is best to perform steps 1 and 2 above before resuming work." />
         </children>
         <padding>
            <Insets left="15.0" right="15.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="83.0" prefWidth="766.0" BorderPane.alignment="CENTER">
         <children>
            <ButtonBar prefHeight="83.0" prefWidth="652.0">
               <buttons>
                  <Button alignment="CENTER" mnemonicParsing="false" text="Planning Poker" textAlignment="CENTER">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button alignment="CENTER" mnemonicParsing="false" onAction="#switchToEditor" text="Effort Editor" textAlignment="CENTER">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button alignment="CENTER" mnemonicParsing="false" prefHeight="25.0" prefWidth="118.0" text="Defect Console" textAlignment="CENTER">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button alignment="CENTER" mnemonicParsing="false" text="Definitions" textAlignment="CENTER">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button alignment="CENTER" mnemonicParsing="false" text="Logs" textAlignment="CENTER">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button alignment="CENTER" layoutX="459.0" layoutY="39.0" mnemonicParsing="false" onAction="#switchToSchedule" text="Schedule" textAlignment="CENTER">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </buttons>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </ButtonBar>
         </children>
      </HBox>
   </bottom>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
   <top>
      <VBox alignment="CENTER" prefHeight="118.0" prefWidth="766.0">
         <children>
            <Label contentDisplay="CENTER" text="Effort Logger Console" textAlignment="CENTER">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
            <Label fx:id="clockLight" alignment="CENTER" prefHeight="34.0" prefWidth="570.0" style="-fx-background-color: red;" text="Clock is Stopped" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </top>
</BorderPane>
